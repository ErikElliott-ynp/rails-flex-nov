<!DOCTYPE html>
<html>
  <head>
    <title>RailsFlexApp</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <%= yield %>
    <% if logged_in? %>
      <h1>Hello <%= current_user.username %></h1>
    <%= end %>
    <%= flash[:errors]  %>
  </body>
</html>
